        <Button x:Name="ChangeButton" Content="Изменить" HorizontalAlignment="Left" Margin="285,340,0,0" VerticalAlignment="Top" Width="230" Click="ChangeButton_Click"/>
        <Button x:Name="ReloadButton" Content="" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Width="25" Height="25" Click="ReloadButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="C:\Users\acer\source\repos\FitnessCenterApplication\reload_icon.ico" Stretch="Uniform"/>
